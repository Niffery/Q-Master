<p id="notice"><%= notice %></p>

<p>
  <strong>Content:<br></strong>
  <%= @question.content %>
</p>

<% if @question.articles.any? %>
	<% @question.articles.each do |article| %>
		<%= render article %>
		<% if article.comments.any? %>
			<%= render article.comments %>
		<% end %>
	<% end %>	
<% end %>

<p>
  <strong>Posted by:<br></strong>
  <%= @question.user.name %>
</p>

<h2> Post my answer </h2>
	<%= render 'articles/form' %>

<%= link_to 'Back', questions_path %>
