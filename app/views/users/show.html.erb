<%provide(:title, @user.name) %>
<div class="row">
   <aside class = "span4">
      <section>
         <h1>
            <%= gravatar_for @user %>
            <%= @user.name %>
         </h1>
      </section>
   </aside>
	<div class="span8">
	<section>
		<%= render 'shared/article_form' %>
	</section>
	<% if @user.questions.any? %>
		<h3> Questions I have asked</h3>
		<ol class="questions">
			<%= render @questions %>
		</ol>
		<%= will_paginate @questions %>
	<% end %>

	<% if @user.articles.any? %>
      <h3>Answers I post</h3>
      <ol class="articles">
        <%= render @articles %>
      </ol>
      <%= will_paginate @articles %>
    <% end %>
	</div>
</div>
